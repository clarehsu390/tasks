- title "New Task"

= form_for @task do |f|
  - if @task.errors.any?
    - @task.errors.full_messages.each do |msg|
      .alert.alert-danger= msg
  
  .control-group
    = f.label :title
    = f.text_field :title

  .control-group
    = f.label :due_at
    = f.datetime_select :due_at, {}, class: "time"
  
  .control-group
    = f.label :category_id
    = f.text_field :category_id

  .form-actions
    = f.submit "Create Task", class: "btn btn-primary"
    = link_to "Cancel", root_path, class: "btn"
